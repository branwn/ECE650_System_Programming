<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC
        "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver" />
                <property name="url" value="jdbc:postgresql://localhost?useSSL=true&amp;useUnicode=true;characterEncoding=UTF-8" />
                <property name="username" value="postgres" />
                <property name="password" value="passw0rd" />
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="color/ColorMapper.xml"/>
        <mapper resource="state/StateMapper.xml"/>
        <mapper resource="team/TeamMapper.xml"/>
        <mapper resource="player/PlayerMapper.xml"/>
        <mapper resource="DBSessionMapper.xml"/>
    </mappers>
</configuration>